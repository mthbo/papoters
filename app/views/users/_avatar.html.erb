<% if user %>
  <% avatar_url = user.facebook_picture_url || "avatar.svg" %>

  <% if user.photo.present? %>
    <%= cl_image_tag user.photo.path, width: 100, height: 100, crop: :thumb, gravity: :face, class: "#{size} bg-light-gray" %>
  <% else %>
    <%= image_tag avatar_url, class: "#{size} bg-light-gray", width: '100px', height: '100px' %>
  <% end %>

<% else %>
  <%= image_tag "account_cancelled.svg", class: "#{size} bg-light-gray", width: '100px', height: '100px' %>
<% end %>
