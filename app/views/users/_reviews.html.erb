<% @deals_reviewed.each do |deal| %>
  <% if deal.advisor == @user %>
    <%= render 'deals/review', deal: deal, user: deal.client, rating: deal.client_global_rating, review: deal.client_review, date: deal.client_review_at, show_offer: true %>
  <% else %>
    <%= render 'deals/review', deal: deal, user: deal.advisor, rating: deal.advisor_global_rating, review: deal.advisor_review, date: deal.advisor_review_at, show_offer: true %>
  <% end %>
<% end %>
