<% if user %>
  <%= link_to user_path(user), class: "deal-user-info" do %>
    <%= render 'users/avatar', user: user, size: 'avatar' %>
    <h6>
      <span class="blue"><%= user.name_anonymous %></span>
      <span class="font-weight-lighter">&nbsp; | &nbsp;<%= user.grade_translated %></span>
    </h6>
  <% end %>

<% else %>
  <div class="deal-user-info">
    <%= render 'users/avatar', user: nil, size: 'avatar' %>
    <h6 class="medium-dark-gray"><%= t '.account_cancelled' %></h6>
  </div>

<% end %>
