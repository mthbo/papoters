<% content_for :title do %>
  <%= "Papoters | #{t('.account_registration')}" %>
<% end %>

<h2><%= t '.account_registration' %></h2>

<%= simple_form_for @user do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-xs-12 padded-top-s">
      <p><%= t('.select_country') %></p>
    </div>
    <div class="col-xs-12 col-sm-6 padded-top-xs">
      <%= f.input :country_code, label: false, prompt: t('.country'), input_html: { class: 'custom-form-input' } %>
    </div>
  </div>

  <div class="text-right padded-top-s">
    <%= button_tag(type: 'submit', class: "btn btn-form btn-blue") do %>
      <i class='fa fa-cloud-upload fa-lg' aria-hidden='true'></i>&nbsp;&nbsp; <%= t '.update' %>
    <% end %>
  </div>
<% end %>
