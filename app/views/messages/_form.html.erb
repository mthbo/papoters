<%= simple_form_for [deal, message], remote: true, html: { class: 'custom-inline-form' } do |f| %>

  <%= f.input :content, label: false, placeholder: "Message for #{ deal.advisor == current_user ? deal.client.first_name : deal.advisor.first_name }", input_html: { class: "#{current_user == deal.advisor ? 'custom-form-input input-rounded input-focus-green' : 'custom-form-input input-rounded input-focus-yellow'}", rows: "1"}, wrapper_html: { class: 'inline-form-input'}, disabled: deal.messages_disabled? %>

  <%= button_tag(type: 'submit', class: "#{current_user == deal.advisor ? 'btn inline-form-btn btn-round btn-green' : 'btn inline-form-btn btn-round btn-yellow'}", disabled: deal.messages_disabled?) do %>
    <i class='fa fa-paper-plane' aria-hidden='true'></i>
  <% end %>

<% end %>
