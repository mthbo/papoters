<h2>Payment of #session-<%= @deal.id %></h2>
<%= form_tag deal_payments_path(@deal) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= money_without_cents_and_with_symbol(@deal.amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="Session payment"
    data-email="<%= current_user.email %>"
    data-description="#session-<%= @deal.id %>"
    data-amount="<%= @deal.amount_cents %>"
    data-currency="<%= @deal.amount.currency %>">
  </script>

<% end %>
