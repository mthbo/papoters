<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, { class: "navbar-wagon-brand" } do %>
    <%= image_tag "tipswell_logo.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="/offers" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <%= link_to "Give tips", new_user_session_path, { class: "navbar-wagon-item navbar-wagon-button btn" } %>

    <%= link_to "Join", new_user_registration_path, { class: "navbar-wagon-item navbar-wagon-link" } %>

    <%= link_to "Sign In", new_user_session_path, { class: "navbar-wagon-item navbar-wagon-link" } %>

  </div>


</div>
