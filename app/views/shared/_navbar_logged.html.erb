<div class="my-navbar my-navbar-fixed" id="my-navbar-logged" data-user-id="<%= current_user.id %>">
  <!-- Logo -->
  <%= link_to root_path, { class: "my-navbar-brand" } do %>
    <%= image_tag "papoters_logo.svg" %>
  <% end %>

  <div class="my-navbar-middle hidden-xs hidden-sm">
    <!-- Search form -->
    <%= form_tag(search_path, method: "get", id: "my-navbar-search") do %>
      <%= text_field_tag :search, params[:search], placeholder: "I need some advice for ...", class: "my-navbar-search-input" %>
      <%= button_tag(type: 'submit', class: "my-navbar-search-btn") do %>
        <i class='fa fa-search'></i>
      <% end %>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="my-navbar-right hidden-xs">

    <!-- Give tips button -->
    <%= link_to "Give advice", be_advisor_path, { class: "my-navbar-button my-navbar-item btn" } %>

    <!-- Notification link-->
    <%= link_to dashboard_path, { class: "my-navbar-item" } do %>
      <div class="badge-container">
        <i class="fa fa-envelope-o"></i>
        <div class="custom-badge-message badge-blue">3</div>
      </div>
    <% end %>

    <!-- Profile picture and dropdown -->
    <div class="my-navbar-item">
      <div class="dropdown">

        <div class="dropdown-toggle" id="my-navbar-menu", data-toggle="dropdown">
          <%= render 'users/avatar', user: current_user, size: 'avatar' %>
        </div>

        <ul class="dropdown-menu dropdown-menu-right my-navbar-dropdown-menu">
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="my-navbar-item hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right my-navbar-dropdown-menu">
        <li><%= link_to "Give advice", be_advisor_path %></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Dashboard", dashboard_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>
