<div class="my-navbar my-navbar-fixed" id="my-navbar-logged" data-user-id="<%= current_user.id %>">

  <div class="my-navbar-left">
    <%= link_to root_path, { class: "my-navbar-brand" } do %>
      <%= image_tag "papoters_logo.svg" %>
    <% end %>
  </div>

  <div class="my-navbar-right hidden-xs">
    <button class="my-navbar-item my-navbar-button-search btn btn-round btn-yellow" id="btn-search-trigger">
      <i class='fa fa-search'></i>
    </button>
    <%= link_to "Give advice", be_advisor_path, { class: "my-navbar-item my-navbar-button btn btn-green" } %>

    <!-- Notification link-->
    <%= link_to dashboard_path, { class: "my-navbar-item" } do %>
      <div class="my-navbar-badge-container">
        <i class="fa fa-hashtag"></i>
        <div class="my-navbar-badge">
          <%= render 'users/notifications' %>
        </div>
      </div>
    <% end %>

    <!-- Profile picture and dropdown -->
    <div class="my-navbar-item">
      <div class="dropdown">

        <div class="dropdown-toggle" id="my-navbar-menu", data-toggle="dropdown">
          <%= render 'users/avatar', user: current_user, size: 'avatar-small' %>
        </div>

        <ul class="dropdown-menu dropdown-menu-right my-navbar-dropdown-menu laptop-dropdown-menu">
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li><%= link_to "Dashboard", dashboard_path %></li>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="hidden-sm hidden-md hidden-lg">
    <div class="dropdown" id="mobile-dropdown">
      <i class="fa fa-lg fa-bars dropdown-toggle mobile-dropdown-toggle" data-toggle="dropdown"></i>
      <div class="my-navbar-mobile-dropdown-badge">
        <%= render 'users/notifications' %>
      </div>
      <ul class="dropdown-menu my-navbar-dropdown-menu mobile-dropdown-menu">
        <li>
          <%= form_tag(search_path, method: "get", id: "dropdown-search") do %>
            <%= text_field_tag :search, params[:search], placeholder: "I need some advice for ...", class: "my-navbar-search-input" %>
            <%= button_tag(type: 'submit', class: "my-navbar-search-btn") do %>
              <i class='fa fa-search'></i>
            <% end %>
          <% end %>
        </li>
        <li><%= link_to "Give advice", be_advisor_path %></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li>
          <%= link_to "Dashboard", dashboard_path %>
          <div class="my-navbar-mobile-menu-badge">
            <%= render 'users/notifications' %>
          </div>
        </li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>

<%= render 'offers/search' %>
