<div class="flash">
  <% if flash[:notice] %>
    <div class="alert alert-info fade in">
      <button class="close" data-dismiss="alert">×</button>
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-error fade in">
      <button class="close" data-dismiss="alert">×</button>
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>
</div>
