<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title><%= yield_with_default(:title, t('title')) %></title>
    <%= favicon_link_tag('papoters_favicon.png') %>
    <meta name="description" content="<%= t('description') %>">
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/instantsearch.js/1/instantsearch.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>

  <body>

    <%= render 'shared/navbar' %>
    <%= render 'shared/flash' %>
    <%= render 'offers/search' %>

    <div id="main">
      <%= yield %>
    </div>

    <div id="current-locale" data-locale="<%= I18n.locale %>"></div>
    <div id="current-env" data-env="<%= ENV['ENV'] %>"></div>

    <%= render "shared/footer" %>
    <%= render "shared/loader" %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag "https://cdn.jsdelivr.net/instantsearch.js/1/instantsearch.min.js" %>
    <%= javascript_include_tag "https://developer.appear.in/scripts/appearin-sdk.0.0.4.min.js" %>
    <%= cloudinary_js_config %>

  </body>

</html>
