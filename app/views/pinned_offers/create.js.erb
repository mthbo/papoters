<% unless @pinned_offer.errors.any? %>
  var $pin_box = $('[data-pin-offer-id=<%= @offer.id %>]')
  var $pin_button = $('[data-pin-offer-id=<%= @offer.id %>] .pin-offer-button');
  $pin_button.animate({top:"-=15px"}, 200, function() {
    $pin_button.animate({top:"+=15px"}, 100, 'swing', function() {
      $(this).remove();
      var $unpin_button = $("<%= j render 'pinned_offers/pin_button', offer: @offer %>").hide();
      $pin_box.append($unpin_button);
      $unpin_button.show();
    });
  });
<% end %>
