<% unless offer.advisor == current_user %>
  <% pinned_offer = offer.pinned(current_user) %>
  <% unless pinned_offer.present? %>
    <%= link_to offer_pinned_offers_path(offer), method: :post, class: "pin-offer-button" do %>
      <i class="fa fa-bookmark" aria-hidden="true"></i>
    <% end %>
  <% else %>
    <%= link_to pinned_offer_path(pinned_offer), method: :delete, class: "unpin-offer-button" do %>
      <i class="fa fa-bookmark" aria-hidden="true"></i>
    <% end %>
  <% end %>
<% end %>
