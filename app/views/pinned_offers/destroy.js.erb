<% unless @pinned_offer.errors.any? %>
  var $pin_box = $('[data-pin-offer-id=<%= @offer.id %>]')
  $pin_box.slideUp('fast', function() {
    $(this).empty();
    var $pin_button = $("<%= j render 'pinned_offers/pin_button', offer: @offer %>");
    $(this).append($pin_button);
    $(this).fadeIn();
  });
<% end %>
