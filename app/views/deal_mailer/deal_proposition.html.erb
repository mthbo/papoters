<p><%= t('.greeting', client: @deal.client.first_name) %></p>

<p><%= t('.message_html', client: @deal.advisor.first_name, offer: @deal.offer.title) %></p>

<div style="margin: 30px 0 15px 0; display: flex; align-items: center">
  <div style="height: 1px; flex: 1 1 auto; background-color: rgb(157,157,157)"></div>
  <p style="font-weight: normal; margin: 0 10px;"><%= t('.proposition_expiry_on', date: l(@deal.deadline.to_date) %></p>
  <div style="height: 1px; flex: 1 1 auto; background-color: rgb(157,157,157)"></div>
</div>

<p><%= t('.request', request: @deal.request) %></p>
<p>
  <%= t('.deadline_html', deadline: l(@deal.deadline.to_date, format: :long)) %><br>
  <%= t('.languages_html', languages: @deal.languages.map{ |language| language.name_translated }.join(', '), count: @deal.languages.count) %><br>
  <%= t('.means_html', means: @deal.means.map{ |mean| mean.name_translated }.join(', '), count: @deal.means.count) %>
</p>

<div style="margin: 20px 0; display: flex; align-items: center">
  <div style="height: 1px; flex: 1 1 auto; background-color: rgb(157,157,157)"></div>
</div>

<div style="text-align: center; padding: 30px 0;">
  <%= link_to t('.action', client: @deal.client.first_name), deal_url(@deal, locale: I18n.locale), style: "font-weight: normal; text-decoration: none; padding: 10px 15px; border-radius: 4px; border: none; color: white; background: linear-gradient(164deg, rgb(255, 201, 56) 0%, rgb(66, 211, 170) 100%);" %>
</div>

<%= render 'shared/mail_signature' %>
