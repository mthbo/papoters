<% if @deal.waiting_proposition? && @deal.advisor == current_user %>
  <% if @deal.errors.any? %>
    $('#edit_deal_<%= @deal.id %>').html("<%= j render 'proposition_form', deal: @deal %>");
    datePicker();
    checkBox();
    window.scroll({ top: 0, left: 0 });
  <% else %>
    $('#proposition_confirmation_box').html("<%= j render 'proposition_confirmation', deal: @deal %>");
    $('#proposition-confirmation').modal('show');
  <% end %>

<% elsif (@deal.proposition_declined? && @deal.client == current_user) || @deal.open? || @deal.closed? || @deal.cancelled? %>
    $('#session-status-panel').html("<%= j render 'deals/status', deal: @deal %>");
    $('#session-info-panel').html("<%= j render 'deals/info', deal: @deal %>");
    $('#session-actions-panel').html("<%= j render 'deals/actions', deal: @deal %>");
    propositionToggle();

<% end %>
