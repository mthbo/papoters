<% if @deal.errors.any? %>
  $('#edit_deal_<%= @deal.id %>').html("<%= j render 'proposition_form', deal: @deal %>");
  datePicker();
  durationSlider();
  checkBox();
  window.scroll({ top: 0, left: 0 });
<% else %>
  $('#deal-proposition-confirmation-box').html("<%= j render 'proposition_confirmation', deal: @deal %>");
  $('#deal-proposition-confirmation').modal('show');
<% end %>
