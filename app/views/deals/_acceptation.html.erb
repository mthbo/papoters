<button type="button" class="btn btn-blue" data-toggle="modal" data-target="#session-acceptation">
  <i class="fa fa-check" aria-hidden="true"></i>&nbsp; Accept
</button>

<div class="modal fade" id="session-acceptation" tabindex="-1" role="dialog" aria-labelledby="sessionAcceptationLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="sessionAcceptationLabel">Accept proposition</h4>
      </div>
      <div class="modal-body">
        <p class="font-weight-normal blue">Please review the proposition of <%= @deal.advisor.first_name %> for "<%= @deal.offer.title %>" before accepting it.</p>
        <div class="form-separation padded-top-s padded-bottom-xs">
          <div></div>
          <p><strong>Proposition recap</strong></p>
          <div></div>
        </div>
        <%= render 'proposition_recap', deal: @deal %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-form btn-gray" data-dismiss="modal">Go back</button>
        <%= link_to deal_path(@deal, deal:{status: :open, accepted_at: DateTime.now }), method: :patch, class: "btn btn-form btn-blue" do %>
          <i class="fa fa-check fa-lg" aria-hidden="true"></i>&nbsp;&nbsp; Accept
        <% end %>
      </div>
    </div>
  </div>
</div>
