<button type="button" class="btn btn-form btn-red" data-toggle="modal" data-target="#session-messages-disabling">
  <i class='fa fa-ban fa-lg' aria-hidden='true'></i>&nbsp;&nbsp; Disable messages
</button>

<div class="modal fade" id="session-messages-disabling" tabindex="-1" role="dialog" aria-labelledby="sessionMessagesDisablingLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="sessionMessagesDisablingLabel">Messages disabling</h4>
      </div>
      <div class="modal-body">
        <div class="padded-top-xs padded-bottom-xs">
          <p>You won't be able to send or receive any message on this session after disabling.</p>
          <p>Are you sure you want to do this?</p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-form btn-gray" data-dismiss="modal">Go back</button>
        <%= link_to disable_messages_deal_path(deal), method: :patch, remote: true, class: "btn btn-form btn-red" do %>
          <i class='fa fa-ban fa-lg' aria-hidden='true'></i>&nbsp;&nbsp; Disable
        <% end %>
      </div>
    </div>
  </div>
</div>
