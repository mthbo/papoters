<% content_for :title do %>
  <%= "Papoters | #session-#{@deal.id}" %>
<% end %>

<div class=
  <% if @deal.advisor == current_user %>
    "padded-top-xxl padded-bottom-xxl bg-gradient-green-gray"
  <% elsif @deal.client == current_user %>
    "padded-top-xxl padded-bottom-xxl bg-gradient-yellow-gray"
  <% end %>
>
  <div class="container">

    <div class="row">
      <div class="col-xs-12 padded-bottom-s">
        <div class="session-title">
          <%= render 'title' %>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="col-xs-12 col-md-6">
        <div class="session-info">

          <div class="padded-bottom-s">
            <%= render 'status' %>
          </div>

          <div>
            <% if @deal.cancelled? %>
              <%= render 'cancelled_part' %>
            <% elsif @deal.request? %>
              <%= render 'request_part' %>
            <% else %>
              <%= render 'proposition_part' %>
            <% end %>
          </div>

          <div class="session-info-box padded-bottom-m session-btns">
            <% if policy(@deal).cancel? %>
              <%= render 'proposition_button' if policy(@deal).proposition? %>
              <%= render 'cancellation' %>
            <% elsif policy(@deal).close? %>
              <%= render 'close' %>
            <% end %>
          </div>

        </div>
      </div>


      <div class="col-xs-12 col-md-6">
        <div class="session-conversation">

          <div class="session-conversation-top">
            <%= render 'users/info_session', deal: @deal %>
          </div>

          <div id="session-conversation-panel">
            <div id="session-conversation-messages" data-deal-messages-id="<%= @deal.id %>">
              <%= render 'conversation_messages', deal: @deal %>
            </div>
          </div>

          <div id="session-conversation-form">
            <%= render 'messages/form', message: @message, deal: @deal %>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>


<%= content_for(:js) do %>
  <%= javascript_tag do %>

    $('#message_content').focusin(function() {
      $.ajax({
        type: "GET",
        url: "<%= type_deal_messages_path(@deal) %>" + "?state=typing",
      });
    });
    $('#message_content').focusout(function() {
      $.ajax({
        type: "GET",
        url: "<%= type_deal_messages_path(@deal) %>" + "?state=stop_typing"
      })
    });

  <% end %>
<% end %>
