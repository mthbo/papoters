<% if policy(deal).cancel? %>
  <% if policy(deal).proposition? %>
    <%= link_to proposition_deal_path(deal), class: "btn btn-form btn-green" do %>
      <i class='fa fa-file-text-o fa-lg' aria-hidden='true'></i>&nbsp;&nbsp; <%= t '.new_proposition' %>
    <% end %>
  <% end %>
  <%= render 'deals/cancel', deal: deal %>
<% elsif policy(deal).close? %>
  <%= render 'deals/close', deal: deal %>
<% elsif policy(deal).review? %>
  <%= link_to review_deal_path(deal), class: "btn btn-form btn-blue" do %>
    <i class="fa fa-star fa-lg <%= current_user == deal.advisor ? 'green' : 'yellow' %>" aria-hidden='true'></i>&nbsp;&nbsp; <%= t '.evaluate_session' %>
  <% end %>
<% elsif policy(deal).disable_messages? %>
  <%= render 'deals/disable_messages', deal: deal %>
<% end %>
