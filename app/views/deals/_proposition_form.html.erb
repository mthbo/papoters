<%= simple_form_for [@offer, @deal] do |f| %>
  <%= f.error_notification message: 'Please fill all the fields below' %>

  <%= f.input :proposition, placeholder: "Detail your proposition" %>
  <%= f.input :price, placeholder: "Enter a price" %>
  <%= f.input :deadline %>
  <%= f.input :proposition_at, as: :hidden, :input_html => { value: DateTime.now } %>

  <%= f.button :submit, "Send proposition", class: "btn btn-primary" %>
<% end %>
