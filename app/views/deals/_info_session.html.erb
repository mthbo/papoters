<div class="session-info-box">

  <% if policy(deal).cancel? %>
    <div class="padded-top-s">
      <% if policy(deal).proposition? %>
        <p class="font-weight-normal"><%= deal.client.first_name %> declined your proposition. Submit a new proposition or cancel the session if you don't want to continue.</p>
      <% else %>
        <p class="font-weight-normal">You declined the proposition. Ask for a new proposition or cancel the session if you don't want to continue.</p>
      <% end %>
    </div>

  <% elsif deal.proposition? %>
    <div class="padded-top-s">
      <% if deal.advisor == current_user %>
        <p class="font-weight-normal">You submitted a proposition, <%= deal.client.first_name %> may accept or decline it.</p>
      <% elsif deal.client == current_user %>
        <p class="font-weight-normal">Accept or decline the proposition to continue.</p>
      <% end %>
    </div>

  <% elsif deal.open? && deal.advisor == current_user %>
    <div class="padded-top-s">
      <p class="font-weight-normal">The session is open until the <%= deal.deadline.strftime("%d %b %Y") %>, unless <%= deal.client.first_name %> closes it before that date.</p>
    </div>

  <% elsif policy(deal).close? %>
    <div class="padded-top-s">
      <% if deal.advisor == current_user %>
        <p class="font-weight-normal">Session deadline has passed. Close the session if you delivered your service.</p>
      <% elsif deal.client == current_user %>
        <% if deal.open? %>
          <p class="font-weight-normal">The session is open until the <%= deal.deadline.strftime("%d %b %Y") %>. You can close it before that date if you got what you need.</p>
        <% elsif deal.open_expired? %>
          <p class="font-weight-normal">Session deadline has passed. Close the session if you got what you need.</p>
        <% end %>
      <% end %>
    </div>

  <% elsif deal.closed? %>
    <div class="padded-top-s">
      <p class="font-weight-normal">This session is closed.</p>
    </div>

  <% end %>

</div>
