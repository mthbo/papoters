<%= simple_form_for [@offer, @deal]  do |f| %>
  <%= f.error_notification message: 'Please fill all the fields below' %>

  <%= f.input :request, placeholder: "Detail your needs" %>
  <%= f.input :deadline %>
  <%= f.association :languages, collection: @offer.languages, as: :check_boxes, include_hidden: false %>
  <%= f.association :means, collection: @offer.means, as: :check_boxes, include_hidden: false %>

  <%= f.hidden_field :status, value: :request %>

  <%= f.button :submit, "Send request", class: "btn btn-primary" %>
<% end %>
