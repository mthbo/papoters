<%= simple_form_for [deal, objective], html: { class: 'objective-form' } do |f| %>
  <%= f.error_notification message: 'Please fill all the fields below' %>

  <%= f.input :description, as: :string, label: false, placeholder: "State a session target", input_html: { class: 'custom-form-input'} %>

  <%= button_tag(type: 'submit', class: "btn btn-objective") do %>
    <i class='fa fa-plus' aria-hidden='true'></i>
  <% end %>

<% end %>
