<%= simple_form_for [deal, objective], remote: true, html: { class: 'objective-form' } do |f| %>

  <%= f.input :description, as: :string, label: false, placeholder: "New target for this session", input_html: { class: 'custom-form-input'} %>

  <%= button_tag(type: 'submit', class: "btn btn-objective") do %>
    <i class='fa fa-plus' aria-hidden='true'></i>
  <% end %>

<% end %>
