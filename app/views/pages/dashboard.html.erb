<div class="wrapper text-center padded-2">
  <% avatar_url = current_user.facebook_picture_url || "photo_client.png" %>

  <% if avatar_url == current_user.facebook_picture_url %>
    <%= image_tag avatar_url, class: "avatar-xlarge" %>
  <% elsif current_user.photo == nil %>
    <%= image_tag avatar_url, class: "avatar-xlarge" %>
  <% else %>
    <%= cl_image_tag current_user.photo.path, class: "avatar-xlarge" %>
  <% end %>
  <h1><%= current_user.first_name %></h1>
  <h3>My dashboard</h3>
  <p><%= link_to "See my profile", user_path(current_user) %></p>
</div>

<div class="container">
  <h2>Client acitivity</h2>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <h3>Requests</h3>
      <% current_user.deals_request.each do |deal| %>
        <%= link_to offer_deal_path(deal.offer, deal) do %>
          <div>
            <% unless deal.advisor.photo.nil? %>
              <%= cl_image_tag deal.advisor.photo.path, {class: "avatar"} %>
            <% else %>
              <%= image_tag "photo_client.png", {class: "avatar"} %>
            <% end %>
            <p><%= deal.advisor.name_anonymous %></p>
            <p><%= deal.offer.title %></p>
            <p><%= deal.deadline %></p>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <h3>Propositions</h3>
      <% current_user.deals_proposition.each do |deal| %>
        <%= link_to offer_deal_path(deal.offer, deal) do %>
          <div>
            <% unless deal.advisor.photo.nil? %>
              <%= cl_image_tag deal.advisor.photo.path, {class: "avatar"} %>
            <% else %>
              <%= image_tag "photo_client.png", {class: "avatar"} %>
            <% end %>
            <p><%= deal.advisor.name_anonymous %></p>
            <p><%= deal.offer.title %></p>
            <p><%= deal.deadline %></p>
            <p>$<%= deal.price %></p>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <h3>Open</h3>
      <% current_user.deals_open.each do |deal| %>
        <%= link_to offer_deal_path(deal.offer, deal) do %>
          <div>
            <% unless deal.advisor.photo.nil? %>
              <%= cl_image_tag deal.advisor.photo.path, {class: "avatar"} %>
            <% else %>
              <%= image_tag "photo_client.png", {class: "avatar"} %>
            <% end %>
            <p><%= deal.advisor.name_anonymous %></p>
            <p><%= deal.offer.title %></p>
            <p><%= deal.deadline %></p>
            <p>$<%= deal.price %></p>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <h3>Closed</h3>
      <% current_user.deals_closed.each do |deal| %>
        <%= link_to offer_deal_path(deal.offer, deal) do %>
          <div>
            <% unless deal.advisor.photo.nil? %>
              <%= cl_image_tag deal.advisor.photo.path, {class: "avatar"} %>
            <% else %>
              <%= image_tag "photo_client.png", {class: "avatar"} %>
            <% end %>
            <p><%= deal.advisor.name_anonymous %></p>
            <p><%= deal.offer.title %></p>
            <p><%= deal.deadline %></p>
            <p>$<%= deal.price %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
