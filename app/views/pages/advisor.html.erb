<% content_for :title, "Papoters | #{t('.title')}" %>
<% content_for :meta_description, t('.meta_description') %>

<div class="home">

  <div class="home-banner home-banner-vertical hidden-xs hidden-sm">
    <div class="home-banner-left home-content-wrapper bg-light-gray">
      <h1 class="home-banner-title"><%= t '.banner_title' %></h1>
      <h2><%= t '.banner_subtitle' %></h2>
      <div class="padded-top-m">
        <% if user_signed_in? %>
          <%= link_to t('.publish_offer_button'), !current_user.advisor? ? country_path : new_offer_path, class: "btn btn-green home-btn", id: "publish-offer-advisor-banner" %>
        <% else %>
          <%= link_to t('.sign_up_as_papoter_button'), new_user_registration_path, class: "btn btn-green home-btn", id: "sign-up-advisor-banner" %>
        <% end %>
      </div>
    </div>
    <div class="home-banner-triangle"></div>
  </div>

  <div class="home-banner text-center bg-blue-transparent hidden-md hidden-lg">
    <div class="home-banner-full-screen-top home-content-wrapper">
      <div class="home-flex-800">
        <h1 class="home-banner-title"><%= t '.banner_title' %></h1>
        <h2><%= t '.banner_subtitle' %></h2>
      </div>
    </div>
    <div class="padded-top-m">
      <% if user_signed_in? %>
        <%= link_to t('.publish_offer_button'), !current_user.advisor? ? country_path : new_offer_path, class: "btn btn-green home-btn", id: "publish-offer-advisor-banner" %>
      <% else %>
        <%= link_to t('.sign_up_as_papoter_button'), new_user_registration_path, class: "btn btn-green home-btn", id: "sign-up-advisor-banner" %>
      <% end %>
    </div>
  </div>

  <div class="home-scroll-arrow">
    <div id="home-arrow-down">
      <div class="hidden-xs hidden-sm hidden-lg">
        <%= image_tag 'arrow_down.svg' %>
      </div>
      <div class="hidden-md">
        <%= image_tag 'arrow_down_white.svg' %>
      </div>
    </div>
  </div>

  <div class="padded-top-l padded-bottom-m text-center bg-white home-benefits">
    <div class="home-content-wrapper padded-bottom-m">
      <div class="home-flex-700">
        <h2><%= t '.benefits_title' %></h2>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/showcase.svg' %>
            </div>
            <h3><%= t '.benefits_title_1' %></h3>
            <p><%= t '.benefits_text_1' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/proposition.svg' %>
            </div>
            <h3><%= t '.benefits_title_2' %></h3>
            <p><%= t '.benefits_text_2' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/star.svg' %>
            </div>
            <h3><%= t '.benefits_title_3' %></h3>
            <p><%= t '.benefits_text_3' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/money.svg' %>
            </div>
            <h3><%= t '.benefits_title_4' %></h3>
            <p><%= t '.benefits_text_4' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/dashboard.svg' %>
            </div>
            <h3><%= t '.benefits_title_5' %></h3>
            <p><%= t '.benefits_text_5' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/screen.svg' %>
            </div>
            <h3><%= t '.benefits_title_6' %></h3>
            <p><%= t '.benefits_text_6' %></p>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div class="bg-light-gray padded-top-l padded-bottom-xl">
    <div class="home-content-wrapper padded-bottom-s text-center">
      <div class="home-flex-700">
        <h2><%= t '.offer_example_title' %></h2>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-lg-10 col-lg-offset-1 padded-bottom-s">
          <%= render 'offers/card', offer: @offer %>
        </div>
      </div>
    </div>

    <div class="home-content-wrapper padded-top-m padded-bottom-xs text-center">
      <% if user_signed_in? %>
        <%= link_to t('.publish_offer_button'), !current_user.advisor? ? country_path : new_offer_path, class: "btn btn-green home-btn", id: "publish-offer-advisor-btn" %>
      <% else %>
        <%= link_to t('.sign_up_as_papoter_button'), new_user_registration_path, class: "btn btn-green home-btn", id: "sign-up-advisor-btn" %>
      <% end %>
    </div>
  </div>

  <div class="bg-white padded-top-m padded-bottom-xl text-center ">
    <div class="home-bottom-img">
      <%= image_tag "papoters_icon.svg" %>
    </div>
    <div class="home-content-wrapper">
      <div class="home-flex-700">
        <h2 class="no-margin-bottom"><%= t '.find_advisor_title' %></h2>
      </div>
    </div>
    <div class="padded-bottom-s home-content-wrapper">
      <div class="home-flex-600">
        <h3 class="medium-dark-gray"><%= t '.find_advisor_subtitle' %></h3>
      </div>
    </div>
    <div class="padded-top-xs">
      <button id="advisor-btn-search-trigger" class="btn btn btn-yellow home-btn">
        <i class='fa fa-search'></i>&nbsp;
        <%= t '.find_advisor_button' %>
      </button>
    </div>
  </div>

</div>
