<% content_for :title do %>
  <%= "Papoters | Home" %>
<% end %>

<div id="home" style='background-image: url("<%= image_path('background.png') %>");'>

  <div id="home-banner" class="text-center">
    <div id="home-banner-top">
      <h1>Get personal advice for whatever you need, anytime, anywhere.</h1>
    </div>

    <div id="home-banner-middle">
      <input type="text" id="home-input" autofocus="true" placeholder="I need some advice for ...">
      <div id="home-input-icon"><i class='fa fa-search'></i></div>
    </div>

    <div id="home-banner-bottom">
      <%= link_to root_path, id: "home-arrow-down" do %>
        <p>Tell me more</p>
        <span class="glyphicon glyphicon-menu-down" aria-hidden="true"></span>
      <% end %>
    </div>
  </div>

  <div id="home-inspirations" class="text-center padded-top-xxl" style='background-image: url("<%= image_path('background_disclose.png') %>");'>
    <h2>Give yourself some support for special moments, or just everyday life.</h2>
  </div>

  <div id="home-guidelines" style='background-image: url("<%= image_path('grid.png') %>");' class="padded-top-l padded-bottom-xl text-center">
    <div class="container">

      <div class="padded-bottom-l">
        <h2>...you would better find someone to help!</h2>
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3 padded-bottom-m">
          <%= image_tag 'guidelines/find-advisor.svg' %>
          <h3><strong>1</strong> | Find an advisor</h3>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 padded-bottom-m">
          <%= image_tag 'guidelines/get-proposal.svg' %>
          <h3><strong>2</strong> | Reach an agreement</h3>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 padded-bottom-m">
          <%= image_tag 'guidelines/get-advice.svg' %>
          <h3><strong>3</strong> | Get advice</h3>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3 padded-bottom-m">
          <%= image_tag 'guidelines/evaluate.svg' %>
          <h3><strong>4</strong> | Tell how happy you are!</h3>
        </div>
      </div>

    </div>
  </div>

  <div id="home-be-advisor" class="padded-top-l padded-bottom-xxl text-center">
    <div class="container">

      <div class="padded-bottom-l">
        <h2>Interested in being advisor?</h2>
        <h3>Don't be shy, your knowledge and your experience have value!</h3>
      </div>
      <%= link_to "Give advice", be_advisor_path, { class: "btn btn-green home-be-advisor-btn" } %>
    </div>
  </div>

</div>

