<% content_for :title, "Papoters | #{t('.title')}" %>
<% content_for :meta_description, t('.meta_description') %>

<div class="home">

  <div class="home-banner text-center bg-gray-transparent">
    <div class="home-banner-top home-content-wrapper">
      <div class="home-flex-800">
        <h1 class="home-banner-title">
          <%= t '.banner_title' %><br>
          <span class="home-banner-rotate font-weight-bolder" data-period="1500" data-rotate='["<%= t '.rot_1' %>", "<%= t '.rot_2' %>", "<%= t '.rot_3' %>", "<%= t '.rot_4' %>", "<%= t '.rot_5' %>", "<%= t '.rot_6' %>", "<%= t '.rot_7' %>", "<%= t '.rot_8' %>", "<%= t '.rot_9' %>", "<%= t '.rot_10' %>"]'></span>
        </h1>
      </div>
    </div>
    <div class="home-banner-middle home-content-wrapper bg-yellow-transparent">
      <input type="text" id="home-input" class="home-flex-600" autofocus="true" placeholder="<%= t '.input_placeholder' %>">
      <div id="home-input-icon"><i class='fa fa-search'></i></div>
    </div>
    <div class="home-banner-bottom home-content-wrapper">
      <%= link_to root_path, id: "home-arrow-down" do %>
        <%= image_tag 'arrow_down.svg' %>
      <% end %>
    </div>
  </div>

  <div class="home-inspirations-top bg-gray-transparent"></div>


  <div class="home-inspirations-body text-center padded-top-l home-content-wrapper">
    <div class="home-flex-700">
      <h2 class="white"><%= t '.inspirations_title' %></h2>
    </div>
  </div>

  <div class="padded-top-l padded-bottom-m text-center bg-white home-benefits">
    <div class="home-content-wrapper padded-bottom-m">
      <div class="home-flex-700">
        <h2><%= t '.benefits_title' %></h2>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/search.svg' %>
            </div>
            <h3><%= t '.benefits_title_1' %></h3>
            <p><%= t '.benefits_text_1' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/send.svg' %>
            </div>
            <h3><%= t '.benefits_title_2' %></h3>
            <p><%= t '.benefits_text_2' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/agree.svg' %>
            </div>
            <h3><%= t '.benefits_title_3' %></h3>
            <p><%= t '.benefits_text_3' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/stars.svg' %>
            </div>
            <h3><%= t '.benefits_title_4' %></h3>
            <p><%= t '.benefits_text_4' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/screen.svg' %>
            </div>
            <h3><%= t '.benefits_title_5' %></h3>
            <p><%= t '.benefits_text_5' %></p>
          </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-lg-4 padded-bottom-m">
          <div class="home-benefits-box">
            <div class="home-benefits-picto">
              <%= image_tag 'benefits/pay.svg' %>
            </div>
            <h3><%= t '.benefits_title_6' %></h3>
            <p><%= t '.benefits_text_6' %></p>
          </div>
        </div>
      </div>
    </div>

  </div>

  <div class="bg-light-gray padded-top-l padded-bottom-xl">
    <div class="home-content-wrapper padded-bottom-xs text-center">
      <div class="home-flex-700">
        <h2><%= t '.offer_sample_title' %></h2>
      </div>
    </div>
    <div class="home-offer-sample-wrapper padded-bottom-xs">
      <div class="home-flex-1200">
        <div class="row">
          <% if @offer_sample.length > 0 %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="home-offer-sample-box">
                <%= render 'offers/card_small', offer: @offer_sample[0] %>
              </div>
            </div>
          <% end %>
          <% if @offer_sample.length > 1 %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="home-offer-sample-box">
                <%= render 'offers/card_small', offer: @offer_sample[1] %>
              </div>
            </div>
          <% end %>
          <% if @offer_sample.length > 2 %>
            <div class="col-xs-12 col-sm-12 col-md-4">
              <div class="home-offer-sample-box">
                <%= render 'offers/card_small', offer: @offer_sample[2] %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="home-content-wrapper padded-top-l text-center">
      <button id="home-btn-search-trigger" class="btn btn btn-yellow home-btn">
        <i class='fa fa-search'></i>&nbsp;
        <%= t '.find_advisor_button' %>
      </button>
    </div>
  </div>

  <div class="bg-white padded-top-m padded-bottom-xl text-center ">
    <div class="home-bottom-img">
      <%= image_tag "papoters_icon.svg" %>
    </div>
    <div class="home-content-wrapper">
      <div class="home-flex-700">
        <h2 class="no-margin-bottom"><%= t '.be_advisor_title' %></h2>
      </div>
    </div>
    <div class="padded-bottom-s home-content-wrapper">
      <div class="home-flex-600">
        <h3 class="medium-dark-gray"><%= t '.be_advisor_subtitle' %></h3>
      </div>
    </div>
    <div class="padded-top-xs">
      <%= link_to t('.be_advisor_button'), advisor_path, { class: "btn btn-green home-btn", id: "home-be-advisor-btn" } %>
    </div>
  </div>

</div>
