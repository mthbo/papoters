<div class="wrapper padded text-center">
  <div class="container">
    <div class="process">
      <h2>Get tailor-made quality advice, naturally.</h2>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'find-advisor.png' %>
          <h3>Find an advisor</h3>
          <div class="circle">1</div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'get-proposal.png' %>
          <h3>Get a proposal</h3>
          <div class="circle">2</div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'be-adviced.png' %>
          <h3>Be adviced</h3>
          <div class="circle">3</div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= image_tag 'evaluate.png' %>
          <h3>Evaluate your experience</h3>
          <div class="circle">4</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container text-center padded">
  <div class="row">
    <h2>Your knowledge and your experience have value.</h2>
    <h3>Become an advisor.</h3>
    <%= link_to "Give tips", new_offer_path, { class: "btn btn-lg btn-success btn-homepage" } %>

  </div>
</div>


