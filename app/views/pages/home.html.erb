        <%= render "shared/card", attr: ['launch-business.jpg', 'Launch a business'] %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= render "shared/card", attr: ['money.jpg', 'Manage your money'] %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= render "shared/card", attr: ['discover-treasures.jpg', 'Discover treasures'] %>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4">
