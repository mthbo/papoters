<h2>Sign in to your account</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs ">
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: "Email", input_html: { class: 'devise-form-input' } %>
    <%= f.input :password, required: false, label: false, placeholder: "Password", input_html: { class: 'devise-form-input' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions text-right">
    <%= f.button :submit, "Sign in", class: "btn-form btn-gray" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

