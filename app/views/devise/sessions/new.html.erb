<% content_for :title do %>
  <%= "Papoters | Sign In" %>
<% end %>

<h2>Sign in to your account</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.input :email, as: :custom, symbol: "<i class='fa fa-envelope-o fa-fw' aria-hidden='true'></i>
".html_safe, label: false, required: true, placeholder: "me@myhost.com", input_html: { class: 'custom-form-input', type: 'email' } %>

  <%= f.input :password, as: :custom, symbol: "<i class='fa fa-lock fa-fw' aria-hidden='true'></i>
".html_safe, label: false, required: true, placeholder: "••••••", input_html: { class: 'custom-form-input', type: 'password' } %>

  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="text-right">
    <%= f.button :submit, "Sign in", class: "btn-form btn-gray" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>

