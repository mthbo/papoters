<% content_for :title, "Papoters â€¢ #{t('.sign_up_name')}" %>

<h2><%= t(".create_account") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row padded-top-xs">
    <div class="col-xs-12 col-sm-6">
      <%= f.input :first_name, autofocus: true, label: false, placeholder: t('.first_name'), input_html: { class: 'custom-form-input' } %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <%= f.input :last_name, label: false, placeholder: t('.last_name'), input_html: { class: 'custom-form-input' } %>
    </div>
    <div class="col-xs-12">
      <%= f.input :email, as: :custom, symbol: "<i class='fa fa-envelope-o fa-fw' aria-hidden='true'></i>".html_safe, label: false, placeholder: t('.email'), input_html: { class: 'custom-form-input', type: 'email' } %>
    </div>
    <div class="col-xs-12">
      <%= f.input :password, as: :custom, symbol: "<i class='fa fa-lock fa-fw' aria-hidden='true'></i>".html_safe, label: false, required: true, placeholder: t('.password', length: @minimum_password_length), input_html: { class: 'custom-form-input', type: 'password' } %>
    </div>
  </div>

  <%= f.hidden_field :locale, value: I18n.locale %>

  <div>
    <p><small>
      <%= t '.accept_service_agreement_1' %>
      <%= link_to t('.tos'), terms_path, target: "blank" %>
      <%= t '.accept_service_agreement_2' %>
      <%= link_to t('.privacy'), privacy_path, target: "blank" %>.
    </small></p>
  </div>

  <div class="form-actions text-right">
    <%= button_tag(type: 'submit', class: "btn btn-form btn-blue", data: {disable_with: t('.signing_up')}) do %>
      <i class='fa fa-sign-in' aria-hidden='true'></i>&nbsp;&nbsp; <%= t(".sign_up") %>
    <% end %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
