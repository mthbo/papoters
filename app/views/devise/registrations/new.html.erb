<% content_for :title do %>
  <%= "Papoters | Join" %>
<% end %>

<h2>Create an account</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= f.input :first_name, required: true, autofocus: true, label: false, placeholder: "First name", input_html: { class: 'custom-form-input' } %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: "Last Name", input_html: { class: 'custom-form-input' } %>
    </div>
    <div class="col-xs-12">
      <%= f.input :email, as: :custom, symbol: "<i class='fa fa-envelope-o fa-fw' aria-hidden='true'></i>
".html_safe, label: false, required: true, placeholder: "me@myhost.com", input_html: { class: 'custom-form-input', type: 'email' } %>
    </div>
    <div class="col-xs-12">
      <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), as: :custom, symbol: "<i class='fa fa-lock fa-fw' aria-hidden='true'></i>
".html_safe, label: false, required: true, placeholder: "••••••", input_html: { class: 'custom-form-input', type: 'password' } %>
    </div>
  </div>

  <div class="text-right">
    <%= button_tag(type: 'submit', class: "btn btn-form btn-blue") do %>
      <i class='fa fa-sign-in' aria-hidden='true'></i>&nbsp;&nbsp; Join
    <% end %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
