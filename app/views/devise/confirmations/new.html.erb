<% content_for :title, "Papoters | #{t('.resend_confirmation_instructions')}" %>

<h2><%= t(".resend_confirmation_instructions") %></h2>

<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs padded-top-xs">
    <%= f.input :email, as: :custom, symbol: "<i class='fa fa-envelope-o fa-fw' aria-hidden='true'></i>".html_safe, label: false, autofocus: true, placeholder: t('.email'), input_html: { class: 'custom-form-input', type: 'email' } %>
  </div>

  <div class="form-actions text-right padded-top-xs">
    <%= button_tag(type: 'submit', class: "btn btn-form btn-blue", data: {disable_with: t('.sending')}) do %>
      <i class='fa fa-envelope-o' aria-hidden='true'></i>&nbsp;&nbsp; <%= t(".resend") %>
    <% end %>
  </div>
<% end %>

<div class='text-right padded-top-xs font-weight-lighter'>
  <%= link_to t('.go_back'), new_session_path(resource_name) %>
</div>
