<% content_for :title do %>
  <%= "Papoters | Forgot password" %>
<% end %>

<h2>Forgot your password?</h2>

<div class="padded-bottom-xs">
  <p>Enter your email to receive your password.</p>
</div>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: { class: 'custom-form-input' } %>

  <div class="text-right">
    <%= f.button :submit, "Send", class: "btn-form btn-gray" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
