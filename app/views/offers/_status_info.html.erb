<% if offer.advisor == current_user %>
  <% if offer.active? %>
    <h6 class="green" data-offer-info-id="<%= offer.id %>"><%= t '.offer_active_advisor' %></h6>
  <% elsif offer.inactive? %>
    <h6 class="medium-gray" data-offer-info-id="<%= offer.id %>"><%= t '.offer_inactive_advisor' %></h6>
  <% end %>
<% elsif offer.inactive? %>
  <h6 class="medium-gray" data-offer-info-id="<%= offer.id %>"><%= t '.offer_inactive_client', advisor_name: offer.advisor.first_name %></h6>
<% end %>
