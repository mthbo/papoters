<div>
  <h1><%= @offer.title %></h1>
  <p>Track record: <%= @offer.deals.count %></p>

  <p>Satisfaction:
    <% (@offer.deals.first.client_rating.to_i).times do %>
      <i class="fa fa-star" aria-hidden="true"></i>
    <% end %>
    <% (5 - @offer.deals.first.client_rating.to_i).times do %>
      <i class="fa fa-star" aria-hidden="true"></i>
    <% end %>
  </p>

  <p><%= @offer.description %></p>
  <ul>
    <% @offer.languages.each do |language| %>
      <li><%= language.name %></li>
    <% end %>
  </ul>
  <ul>
    <% @offer.means.each do |mean| %>
      <li><%= mean.name %></li>
    <% end %>
  </ul>

</div>

<hr>

<h3>Reviews (<%= @offer.deals.where(client_review: !nil).count %>)</h3>
<hr>
<div>
  <div>
    <% @offer.deals.each do |deal| %>
      <div>
        <%= deal.client.first_name %> <%= deal.client.last_name.first %>.
      </div>
      <div>
        <% (deal.client_rating.to_i).times do %>
          <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
        <% (5 - deal.client_rating.to_i).times do %>
          <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </div>
      <div>
        <%= deal.client_review %>
      </div>
      <hr>
    <% end %>
  </div>
</div>
