<% if offer.active? %>
  <%= link_to offer_path(offer, offer:{status: :inactive}), method: :patch, remote: :true, class: "offer-trigger-btn inactivate-offer" do %>
  <% end %>
<% elsif offer.inactive? %>
  <%= link_to offer_path(offer, offer:{status: :active}), method: :patch, remote: :true, class: "offer-trigger-btn activate-offer" do %>
  <% end %>
<% end %>
