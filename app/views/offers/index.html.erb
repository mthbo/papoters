<% content_for :title do %>
  <%= "Search results | Papoters" %>
<% end %>

<div class="padded-top-xxl padded-bottom-xxl bg-gray">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-lg-10 col-lg-offset-1">

        <div>
          <h1>Offers</h1>
          <% if @offers.present? %>
            <% @offers.each do |offer| %>
              <%= render "offers/card", offer: offer %>
            <% end %>
          <% else %>
            <p>No corresponding offers found</p>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>


